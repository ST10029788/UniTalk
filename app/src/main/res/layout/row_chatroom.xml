<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:optRoundCardRightBottomCorner="false"
        android:backgroundTint="@color/white"

        app:strokeWidth="1dp"
        app:strokeColor="@color/light_mode_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chatImage"
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/chatroombg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageIv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:shapeAppearanceOverlay="@style/ImageStyle_circle"
                    android:layout_marginEnd="8dp"
                    android:background="#959595"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_white" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="2dp"
                    android:text="UserName"
                    android:textColor="@color/light_mode_text"
                    android:textSize="16sp" /> <!-- Reduced margin top -->

                <!-- TextView for displaying time -->
                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:text="12:00 PM"
                    android:textColor="@color/light_mode_text"
                    android:textSize="14sp"
                    android:textStyle="bold" /> <!-- Reduced margin top -->

            </LinearLayout>

            <TextView
                android:id="@+id/messageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:text="This is Dummy Text Message"
                android:textAlignment="textStart"
                android:textColor="@color/light_mode_text"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>



